<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".dice.DiceFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/dice_result_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:padding="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="0"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/colorPaper"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="0dp">

            <Button
                android:id="@+id/dice_d4_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_shape"
                android:text="d4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/dice_d6_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_shape"
                android:text="d6"
                app:layout_constraintEnd_toStartOf="@+id/dice_d8_button"
                app:layout_constraintStart_toEndOf="@+id/dice_d4_button"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/dice_d8_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_round_shape"
                android:text="d8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/dice_d10_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_round_shape"
                android:text="d10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dice_d4_button" />

            <Button
                android:id="@+id/dice_d12_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_round_shape"
                android:text="d12"
                app:layout_constraintEnd_toStartOf="@+id/dice_d20_button"
                app:layout_constraintStart_toEndOf="@+id/dice_d10_button"
                app:layout_constraintTop_toBottomOf="@+id/dice_d6_button" />

            <Button
                android:id="@+id/dice_d20_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_round_shape"
                android:text="d20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dice_d8_button" />

            <Button
                android:id="@+id/dice_d100_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/background_round_shape"
                android:text="d100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dice_d12_button" />" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>